<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane id="AnchorPane" prefHeight="400.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ViewController.AddPartScreenController">
   <children>
      <Label layoutX="27.0" layoutY="31.0" text="Add Part">
         <font>
            <Font name="System Bold" size="14.0" />
         </font>
      </Label>
      <ButtonBar layoutX="43.0" layoutY="21.0" prefHeight="40.0" prefWidth="247.0">
         <buttons>
            <ButtonBar prefHeight="40.0" prefWidth="244.0">
               <buttons>
                  <ButtonBar prefHeight="40.0" prefWidth="197.0">
                    <buttons>
                        <RadioButton fx:id="outsourcedRadio" mnemonicParsing="false" onAction="#addPartOutsourcedRB" text="Outsourced" />
                        <RadioButton fx:id="inhouseRadio" mnemonicParsing="false" onAction="#addPartInHouseRB" text="In-House" />
                    </buttons>
                  </ButtonBar>
               </buttons>
            </ButtonBar>
         </buttons>
      </ButtonBar>
      <VBox layoutX="40.0" layoutY="80.0" prefHeight="200.0" prefWidth="320.0" spacing="18.0">
         <children>
            <HBox prefHeight="40.0" prefWidth="200.0" spacing="45.0">
               <children>
                  <Label text="ID" />
                  <TextField fx:id="partIDInput" />
               </children>
            </HBox>
            <HBox prefHeight="31.0" prefWidth="200.0" spacing="25.0">
               <children>
                  <Label text="Name" />
                  <TextField fx:id="partNameInput" />
               </children>
            </HBox>
            <HBox prefHeight="31.0" prefWidth="200.0" spacing="40.0">
               <children>
                  <Label text="Inv" />
                  <TextField fx:id="partQtyInput" prefHeight="25.0" prefWidth="110.0" />
               </children>
            </HBox>
            <HBox prefHeight="31.0" prefWidth="200.0" spacing="3.0">
               <children>
                  <Label text="Price/Cost" />
                  <TextField fx:id="partPriceInput" />
               </children>
            </HBox>
            <HBox prefHeight="47.0" prefWidth="200.0" spacing="35.0">
               <children>
                  <Label text="Max" />
                  <TextField fx:id="partMaxInput" prefHeight="25.0" prefWidth="76.0" />
                  <Label layoutX="10.0" layoutY="10.0" text="Min" />
                  <TextField fx:id="partMinInput" prefHeight="25.0" prefWidth="77.0" />
               </children>
            </HBox>
            <HBox prefHeight="40.0" prefWidth="200.0" spacing="7.0">
               <children>
                  <Label fx:id="dynamicInputLabel" text="Company Name" />
                  <TextField fx:id="dynamicTextInput" />
               </children>
            </HBox>
         </children>
      </VBox>
      <ButtonBar layoutX="166.0" layoutY="333.0" prefHeight="40.0" prefWidth="180.0">
        <buttons>
          <Button fx:id="addPartSaveButton" mnemonicParsing="false" onAction="#addPartSaveAction" text="Save" />
            <Button fx:id="addPartCalcelButton" mnemonicParsing="false" onAction="#addPartCancelAction" text="Cancel" />
        </buttons>
      </ButtonBar>
   </children>
</AnchorPane>
